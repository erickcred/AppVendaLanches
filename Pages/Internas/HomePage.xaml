<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.Internas.HomePage"
             NavigationPage.HasNavigationBar="False">

  <Grid RowDefinitions="Auto, Auto, Auto, Auto, 3*, Auto, 4*"
          RowSpacing="18" Margin="15">

    <VerticalStackLayout Grid.Row="0">
      <Label x:Name="lblSaudacao"
             Text="OlÃ¡, "
             FontSize="Large"/>
      <Label Text="Bateu aquela fome!"
               TextColor="#B73A5A"
               FontAttributes="Bold"
               FontSize="Subtitle"/>
    </VerticalStackLayout>

    <Label Text="Categorias"
           TextColor="#7E045D"
           FontAttributes="Bold"
           FontSize="Medium"
           Grid.Row="1"/>
    
    <CollectionView x:Name="cvCategorias" SelectionMode="Single"
                    SelectionChanged="cvCategorias_SelectionChanged"
                    Grid.Row="2">
      <CollectionView.ItemsLayout>
        <LinearItemsLayout ItemSpacing="28" Orientation="Horizontal" />
      </CollectionView.ItemsLayout>

      <CollectionView.ItemTemplate>
        <DataTemplate>
          <VerticalStackLayout>

            <Image Source="{ Binding CaminhoImagem }"
                   HeightRequest="60" WidthRequest="60" />

            <Label Text="{ Binding Nome }" HorizontalOptions="Center" FontSize="Small" />

          </VerticalStackLayout>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

    <Label Text="Mais Vendidos"
           TextColor="#6A045D"
           FontAttributes="Bold"
           FontSize="Medium"
           Grid.Row="3"/>

    <CollectionView x:Name="cvMaisVendidos" SelectionMode="Single" Grid.Row="4">
      <CollectionView.ItemsLayout>
        <LinearItemsLayout ItemSpacing="20" Orientation="Horizontal" />
      </CollectionView.ItemsLayout>

      <CollectionView.ItemTemplate>
        <DataTemplate>

          <Border StrokeShape="RoundRectangle 10, 10, 10, 10">
            <VerticalStackLayout>

              <Image Source="{ Binding CaminhoImagem }" Aspect="AspectFill"
                    HeightRequest="120" WidthRequest="120" />

              <Label Text="{ Binding Nome }" TextColor="White" HorizontalOptions="FillAndExpand"
                     BackgroundColor="#80000000"
                     Padding="5,5" VerticalOptions="End" 
                     FontSize="18" />

            </VerticalStackLayout>
          </Border>

        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

    <Label Text="Mais Populares"
           TextColor="#6A045D"
           FontAttributes="Bold"
           FontSize="Medium"
           Grid.Row="5"/>

    <CollectionView x:Name="cvPopulares" SelectionMode="Single" Grid.Row="6">
      <CollectionView.ItemsLayout>
        <LinearItemsLayout ItemSpacing="20" Orientation="Horizontal" />
      </CollectionView.ItemsLayout>

      <CollectionView.ItemTemplate>
        <DataTemplate>

          <Border StrokeShape="RoundRectangle 10, 10, 10, 10"
                  VerticalOptions="Start" Padding="4">
            <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="4">

              <Image Source="{ Binding CaminhoImagem }" Aspect="AspectFill"
                    HeightRequest="120" WidthRequest="120" />

              <Label Text="{ Binding Nome }" FontAttributes="Bold" LineBreakMode="WordWrap"
                     FontSize="Small" MaxLines="2" Grid.Row="1" />

              <Label Text="{ Binding Preco, StringFormat='R$ {0:F2}' }" FontAttributes="Bold" 
                     FontSize="Small"  Grid.Row="2" />

            </Grid>

          </Border>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </Grid>

</ContentPage>